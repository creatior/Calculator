<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Calculator" Height="600" Width="800" WindowStyle="ThreeDBorderWindow">
    <Grid x:Name="MainGrid" Background="{DynamicResource {x:Static SystemColors.GradientInactiveCaptionBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" x:Name="MainDisplay" FontSize="36"/>
        <Button Grid.Row="1" Grid.Column="0" FontSize="36">1</Button>
        <Button Grid.Row="1" Grid.Column="1" FontSize="36">2</Button>
        <Button Grid.Row="1" Grid.Column="2" FontSize="36">3</Button>
        <Button Grid.Row="1" Grid.Column="3" FontSize="36" Content="+"></Button>
        <Button Grid.Row="2" Grid.Column="0" FontSize="36">4</Button>
        <Button Grid.Row="2" Grid.Column="1" FontSize="36">5</Button>
        <Button Grid.Row="2" Grid.Column="2" FontSize="36">6</Button>
        <Button Grid.Row="2" Grid.Column="3" FontSize="36" Content="-"></Button>
        <Button Grid.Row="3" Grid.Column="0" FontSize="36">7</Button>
        <Button Grid.Row="3" Grid.Column="1" FontSize="36">8</Button>
        <Button Grid.Row="3" Grid.Column="2" FontSize="36">9</Button>
        <Button Grid.Row="3" Grid.Column="3" FontSize="36" Content="*"></Button>
        <Button Grid.Row="4" Grid.Column="0" FontSize="36">AC</Button>
        <Button Grid.Row="4" Grid.Column="1" FontSize="36">0</Button>
        <Button Grid.Row="4" Grid.Column="2" FontSize="36" Content="="></Button>
        <Button Grid.Row="4" Grid.Column="3" FontSize="36" Content="/"></Button>
    </Grid>
</Window>
